<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
  "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<!-- Developer Mode -->
	<constant name="struts.devMode" value="true" />

	<!-- Tiles integration -->
	<constant name="struts.tiles.definitionConfig"
		value="/WEB-INF/tiles.xml" />

	<!-- Disable dynamic method invocation -->
	<constant name="struts.enable.DynamicMethodInvocation"
		value="false" />

	<!-- Default encoding -->
	<constant name="struts.i18n.encoding" value="UTF-8" />

	<!-- Main package -->
	<package name="frontend" namespace="/"
		extends="struts-default,tiles-default">

		<!-- Home Action -->
		<action name="home"
			class="com.example.frontend.controller.HomeAction">
			<result name="success" type="tiles">home</result>
		</action>

		<!-- Registration Action -->
		<action name="registration"
			class="com.example.frontend.controller.RegistrationAction">
			<result name="success" type="tiles">registration</result>
		</action>

		<action name="viewStudents"
			class="com.example.frontend.controller.RegistrationAction">
			<result name="success" type="tiles">students</result>
		</action>

		<!-- Registration Action -->
		<action name="userRegistration"
			class="com.example.frontend.controller.UserAction">
			<result name="success" type="tiles">userRegistration</result>
		</action>
		
		<action name="viewUsers"
			class="com.example.frontend.controller.UserAction"
			method="fetchUsers">
			<result name="success" type="tiles">viewUsers</result>
		</action>
		
		<action name="UserAction"
			class="com.example.frontend.controller.UserAction"
			 method="registerUser">
			<result name="success" type="redirectAction">viewUsers</result>
		</action>


	</package>
</struts>
